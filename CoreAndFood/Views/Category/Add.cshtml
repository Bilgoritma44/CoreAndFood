@model CoreAndFood.Data.Models.Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_CoreAndFoodLayout.cshtml";
}

<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<form class="form-group" method="post">

    <label><b>Category Name</b></label>
    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { style = "color:Blue" })
    <br />,
    <label><b>Category Description</b></label>
    @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { style = "color:Blue" })
    <br />
    <button class="btn btn-info">New Add Category</button>

</form>


